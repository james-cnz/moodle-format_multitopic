<div id="course-format-{{uniqid}}">
    <h2 class="accesshide">{{{title}}}</h2>
    {{#tabs}}
        {{> format_multitopic/courseformat/contenttabs/tabtreecontainer}}
    {{/tabs}}
    {{{completionhelp}}}
    <ul class="{{format}} section-list sections topics" data-for="course_sectionlist" data-originalsinglesectionid="{{originalsinglesectionid}}">
        {{#initialsection}}
            {{$ core_courseformat/local/content/section }}
                {{> format_multitopic/courseformat/content/section }}
            {{/ core_courseformat/local/content/section }}
        {{/initialsection}}
        {{#sections}}
            {{$ core_courseformat/local/content/section }}
                {{> format_multitopic/courseformat/content/section }}
            {{/ core_courseformat/local/content/section }}
        {{/sections}}
    </ul>

    {{#numsections}}

            {{$ core_courseformat/local/content/addsection}}
                {{> format_multitopic/courseformat/content/addsection}}
            {{/ core_courseformat/local/content/addsection}}

    {{/numsections}}
    {{#bulkedittools}}
        {{$ core_courseformat/local/content/bulkedittools}}
            {{> core_courseformat/local/content/bulkedittools}}
        {{/ core_courseformat/local/content/bulkedittools}}
    {{/bulkedittools}}
</div>
